{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "es2020",
		"outDir": "./dist/out-tsc",
		"sourceMap": false,
		"incremental": true,
		"inlineSourceMap": true,
		"skipLibCheck": true,
		"declaration": false,
		"moduleResolution": "node",
		"pretty": true,
		"resolveJsonModule": true,
		"preserveConstEnums": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"baseUrl": "",
		"paths": {
			"@shared/*": ["src/shared/*"]
		},
		"target": "es5",
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es2017",
			"es2016",
			"es2015",
			"dom"
		]
	},
	"files": [
		"src/main.ts",
		"src/polyfills.ts"
	],
	"include": [
		"src/**/*.d.ts"
	],
	"exclude": [
		"node_modules"
	]
}
