{
	"compilerOptions": {
		"target": "es5",
		"incremental": true,
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"pretty": true,
		"moduleResolution": "Node",
		"preserveConstEnums": true,
		"inlineSourceMap": true,
		"esModuleInterop": true,
		"lib": [
			"es2017",
			"es2016",
			"es2015",
			"dom"
		],
		"baseUrl": "tsconfig.index",
		"paths": {
			"@lib/*": ["./main/lib/*"],
			"@shared/*": ["./src/shared"]
		},
		"types": []
	},
	"include": [
		"./main.ts",
		"./main-lib/**.ts"
	]
}
