{
	"compilerOptions": {
		"sourceMap": false,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"inlineSourceMap": true,
		"incremental": true,
		"esModuleInterop": true,
		"pretty": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"preserveConstEnums": true,
		"target": "es5",
		"baseUrl": "",
		"types": [
			"node"
		],
		"lib": [
			"es2017",
			"es2016",
			"es2015",
			"dom"
		]
	},
	"files": [
		"main.ts"
	],
	"include": ["./lib/**/*.ts"],
	"exclude": [
		"node_modules",
	]
}
