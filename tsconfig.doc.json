{
	"compileOnSave": false,
	"compilerOptions": {
		"module": "es2020",
		"outDir": "./dist/app",
		"sourceMap": false,
		"declaration": false,
		"moduleResolution": "node",
		"emitDecoratorMetadata": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"experimentalDecorators": true,
	},
	"include": [
		"**/*.ts"
	],
	"exclude": [
		"node_modules"
	]
}
